
//Randomise shape
//generates random number
int $shapes = `rand 1 7`;
//if value is 1, make cube
if ($shapes == 1) {
    polyCube;
}
//if value is 2 make sphere
if ($shapes == 2) {
    polySphere;
};
//if value is 3, make cylinder
if ($shapes == 3) {
    polyCylinder;
};
//if value is 4, make Cone
if ($shapes == 4) {
    polyCone;
};
//if value is 5, make Torus
if ($shapes == 5) {
    polyTorus;
};
//if value is 6, make Pyramid
if ($shapes == 6) {
    polyPyramid;
};


//Random rotation
// Create random integer
int $RotateX = `rand -100 100`;
int $RotateY = `rand -100 100`;
int $RotateZ = `rand -100 100`;
//rotate selected onjects by random integer
rotate $RotateX $RotateY $RotateZ


//Random move
// Create random integer
int $MoveX = `rand -10 10`;
int $MoveY = `rand -10 10`;
int $MoveZ = `rand -10 10`;
//Move selected onjects by random integer
move $MoveX $MoveY $MoveZ




//Function for Ui
global proc RandomShapes() {
    
//Randomise shape
//generates random number
int $shapes = `rand 1 7`;
//if value is 1, make cube
if ($shapes == 1) {
    polyCube;
}
//if value is 2 make sphere
if ($shapes == 2) {
    polySphere;
};
//if value is 3, make cylinder
if ($shapes == 3) {
    polyCylinder;
};
//if value is 4, make Cone
if ($shapes == 4) {
    polyCone;
};
//if value is 5, make Torus
if ($shapes == 5) {
    polyTorus;
};
//if value is 6, make Pyramid
if ($shapes == 6) {
    polyPyramid;
};
    
}

//UI stuff
    // If the window exists, delete it
    
    
    // Build the window
window -title "Randomiser" -widthHeight 200 100 Randomiser;
columnLayout -adjustableColumn true -rowSpacing 10;
    button -label "Randomise shapes" -command "RandomShapes()";
setParent ..;

// Show the window
showWindow Randomiser;
