polyCube -name "Dave";
move 2 2 2;

polySphere -name "Alice";
move -r 0 1 0;
select -all;

doGroup 0 1 1;
rename "group1" "Friends";
rotate 0 90 0;

//Randon Number thing!!!:
// Create random integer
int $number = `rand 0 100`;

//rotate selected onjects by rnadom integer
rotate $number


//Random shape generator
//generates random number
int $shapes = `rand 1 4`;
//if value is 1, make cube
if ($shapes == 1) {
    polyCube;
};
//if value is 2 make sphere
if ($shapes == 2) {
    polySphere;
};
//if value is 3, make cylinder
if ($shapes == 3) {
    polyCylinder;
};
